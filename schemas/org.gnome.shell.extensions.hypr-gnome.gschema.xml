<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.hypr-gnome" path="/org/gnome/shell/extensions/hypr-gnome/">
    
    <key name="hypr-swap-master" type="as">
      <default><![CDATA[['<Alt><Shift>Return']]]></default>
      <summary>Swap current window with master.</summary>
    </key>
    <key name="hypr-swap-up" type="as">
      <default><![CDATA[['<Alt><Shift>k', '<Alt><Shift>Up']]]></default>
      <summary>Swap current window with window above.</summary>
    </key>
    <key name="hypr-swap-down" type="as">
      <default><![CDATA[['<Alt><Shift>j', '<Alt><Shift>Down']]]></default>
      <summary>Swap current window with window below.</summary>
    </key>
    <key name="hypr-swap-left" type="as">
      <default><![CDATA[['<Alt><Shift>h', '<Alt><Shift>Left']]]></default>
      <summary>Swap current window with window to the left.</summary>
    </key>
    <key name="hypr-swap-right" type="as">
      <default><![CDATA[['<Alt><Shift>l', '<Alt><Shift>Right']]]></default>
      <summary>Swap current window with window to the right.</summary>
    </key>
    
    <key name="hypr-focus-up" type="as">
      <default><![CDATA[['<Alt>k', '<Alt>Up']]]></default>
      <summary>Focus window above.</summary>
    </key>
    <key name="hypr-focus-down" type="as">
      <default><![CDATA[['<Alt>j', '<Alt>Down']]]></default>
      <summary>Focus window below.</summary>
    </key>
    <key name="hypr-focus-left" type="as">
      <default><![CDATA[['<Alt>h', '<Alt>Left']]]></default>
      <summary>Focus window to the left.</summary>
    </key>
    <key name="hypr-focus-right" type="as">
      <default><![CDATA[['<Alt>l', '<Alt>Right']]]></default>
      <summary>Focus window to the right.</summary>
    </key>
    <key name="hypr-test-keybinding" type="as">
      <default><![CDATA[['<Super>t']]]></default>
      <summary>Test keybinding to verify system works.</summary>
    </key>

    <!-- Workspace switching keybindings -->
    <key name="hypr-workspace-1" type="as">
      <default><![CDATA[['<Alt>1']]]></default>
      <summary>Switch to workspace 1.</summary>
    </key>
    <key name="hypr-workspace-2" type="as">
      <default><![CDATA[['<Alt>2']]]></default>
      <summary>Switch to workspace 2.</summary>
    </key>
    <key name="hypr-workspace-3" type="as">
      <default><![CDATA[['<Alt>3']]]></default>
      <summary>Switch to workspace 3.</summary>
    </key>
    <key name="hypr-workspace-4" type="as">
      <default><![CDATA[['<Alt>4']]]></default>
      <summary>Switch to workspace 4.</summary>
    </key>
    <key name="hypr-workspace-5" type="as">
      <default><![CDATA[['<Alt>5']]]></default>
      <summary>Switch to workspace 5.</summary>
    </key>
    <key name="hypr-workspace-6" type="as">
      <default><![CDATA[['<Alt>6']]]></default>
      <summary>Switch to workspace 6.</summary>
    </key>
    <key name="hypr-workspace-t" type="as">
      <default><![CDATA[['<Alt>t']]]></default>
      <summary>Switch to workspace T.</summary>
    </key>
    <key name="hypr-workspace-b" type="as">
      <default><![CDATA[['<Alt>b']]]></default>
      <summary>Switch to workspace B.</summary>
    </key>
    <key name="hypr-workspace-s" type="as">
      <default><![CDATA[['<Alt>s']]]></default>
      <summary>Switch to workspace S.</summary>
    </key>
    <key name="hypr-workspace-a" type="as">
      <default><![CDATA[['<Alt>a']]]></default>
      <summary>Switch to workspace A.</summary>
    </key>
    <key name="hypr-workspace-m" type="as">
      <default><![CDATA[['<Alt>m']]]></default>
      <summary>Switch to workspace M.</summary>
    </key>
    <key name="hypr-workspace-d" type="as">
      <default><![CDATA[['<Alt>d']]]></default>
      <summary>Switch to workspace D.</summary>
    </key>

    <!-- Move window to workspace keybindings -->
    <key name="hypr-move-to-workspace-1" type="as">
      <default><![CDATA[['<Alt><Shift>1']]]></default>
      <summary>Move focused window to workspace 1.</summary>
    </key>
    <key name="hypr-test-move-workspace" type="as">
      <default><![CDATA[['<Alt><Shift>y']]]></default>
      <summary>Test move window to workspace 1.</summary>
    </key>
    <key name="hypr-move-to-workspace-2" type="as">
      <default><![CDATA[['<Alt><Shift>2']]]></default>
      <summary>Move focused window to workspace 2.</summary>
    </key>
    <key name="hypr-move-to-workspace-3" type="as">
      <default><![CDATA[['<Alt><Shift>3']]]></default>
      <summary>Move focused window to workspace 3.</summary>
    </key>
    <key name="hypr-move-to-workspace-4" type="as">
      <default><![CDATA[['<Alt><Shift>4']]]></default>
      <summary>Move focused window to workspace 4.</summary>
    </key>
    <key name="hypr-move-to-workspace-5" type="as">
      <default><![CDATA[['<Alt><Shift>5']]]></default>
      <summary>Move focused window to workspace 5.</summary>
    </key>
    <key name="hypr-move-to-workspace-6" type="as">
      <default><![CDATA[['<Alt><Shift>6']]]></default>
      <summary>Move focused window to workspace 6.</summary>
    </key>
    <key name="hypr-move-to-workspace-t" type="as">
      <default><![CDATA[['<Alt><Shift>t']]]></default>
      <summary>Move focused window to workspace T.</summary>
    </key>
    <key name="hypr-move-to-workspace-b" type="as">
      <default><![CDATA[['<Alt><Shift>b']]]></default>
      <summary>Move focused window to workspace B.</summary>
    </key>
    <key name="hypr-move-to-workspace-s" type="as">
      <default><![CDATA[['<Alt><Shift>s']]]></default>
      <summary>Move focused window to workspace S.</summary>
    </key>
    <key name="hypr-move-to-workspace-a" type="as">
      <default><![CDATA[['<Alt><Shift>a']]]></default>
      <summary>Move focused window to workspace A.</summary>
    </key>
    <key name="hypr-move-to-workspace-m" type="as">
      <default><![CDATA[['<Alt><Shift>m']]]></default>
      <summary>Move focused window to workspace M.</summary>
    </key>
    <key name="hypr-move-to-workspace-d" type="as">
      <default><![CDATA[['<Alt><Shift>d']]]></default>
      <summary>Move focused window to workspace D.</summary>
    </key>

    <key name="inner-gap" type="i">
      <default>10</default>
      <summary>The gap between windows in pixels.</summary>
    </key>
    <key name="outer-gap-horizontal" type="i">
      <default>5</default>
      <summary>The gap to the left and right screen edges.</summary>
    </key>
    <key name="outer-gap-vertical" type="i">
      <default>5</default>
      <summary>The gap to the top and bottom screen edges.</summary>
    </key>

    <key name="new-window-behavior" type="s">
      <default>'stack'</default>
      <summary>Behavior for newly opened windows.</summary>
      <description>Determines if a new window is added as master or stack window.</description>
    </key>

    <!-- Window padding settings -->
    <key name="window-padding" type="i">
      <default>8</default>
      <summary>Padding around windows in pixels.</summary>
      <description>Additional padding applied around each window for better visual separation.</description>
    </key>

    <!-- Window highlighting settings -->
    <key name="enable-window-highlighting" type="b">
      <default>true</default>
      <summary>Enable window highlighting for focused windows.</summary>
      <description>Shows a visual border around the currently focused window.</description>
    </key>
    <key name="highlight-border-color" type="s">
      <default>'#ffd700'</default>
      <summary>Color of the highlight border.</summary>
      <description>CSS color value for the window highlight border (e.g., #ffd700, #00ff00, blue).</description>
    </key>
    <key name="highlight-border-thickness" type="i">
      <default>3</default>
      <summary>Thickness of the highlight border in pixels.</summary>
      <description>Width of the border around focused windows.</description>
    </key>
    <key name="highlight-border-radius" type="i">
      <default>4</default>
      <summary>Border radius for rounded corners in pixels.</summary>
      <description>Radius for rounded corners of the highlight border.</description>
    </key>
    <key name="highlight-shadow-enabled" type="b">
      <default>true</default>
      <summary>Enable shadow effect for highlighted windows.</summary>
      <description>Adds a subtle shadow around the highlighted window border.</description>
    </key>

    <!-- Catppuccin color scheme settings -->
    <key name="catppuccin-color-scheme" type="s">
      <default>'frappe'</default>
      <summary>Catppuccin color scheme variant.</summary>
      <description>Choose between different Catppuccin color scheme variants (latte, frappe, macchiato, mocha).</description>
    </key>
    <key name="catppuccin-accent-color" type="s">
      <default>'lavender'</default>
      <summary>Catppuccin accent color for highlighting.</summary>
      <description>Choose the accent color from the Catppuccin palette (lavender, blue, rosewater, flamingo, pink, mauve, red, maroon, green, teal, yellow, peach).</description>
    </key>
    <key name="use-catppuccin-colors" type="b">
      <default>true</default>
      <summary>Use Catppuccin color scheme for highlighting.</summary>
      <description>When enabled, uses Catppuccin color palette instead of custom highlight color.</description>
    </key>
    
  </schema>
</schemalist>
